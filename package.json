{
  "name": "spotify-vscode-player",
  "displayName": "spotify-vscode",
  "description": "spotify-vscode is a Visual Studio Code extension that allows you to control Spotify playback directly from your editor. With spotify-vscode, you can play, pause, skip tracks, and manage your Spotify playlist without leaving your coding environment.",
  "version": "1.1.4",
  "publisher": "duch-nuon",
  "license": "MIT",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "media/spotify-logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Duch-Nuon/spotify-vscode.git"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "spotify-vscode.login",
        "title": "Login to Spotify"
      },
      {
        "command": "spotify-vscode.logout",
        "title": "Logout from Spotify"
      },
      {
        "command": "spotify-vscode.next",
        "title": "Next Track"
      },
      {
        "command": "spotify-vscode.previous",
        "title": "Previous Track"
      },
      {
        "command": "spotify-vscode.togglePlay",
        "title": "Toggle Play/Pause"
      },
      {
        "command": "spotify-vscode.favorite",
        "title": "Favorite Track"
      },
      {
        "command": "spotify-vscode.playTrackInQueue",
        "title": "Play Track in Queue"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "spotifySidebar",
          "title": "Spotify",
          "icon": "media/spotify.png"
        }
      ]
    },
    "views": {
      "spotifySidebar": [
        {
          "type": "webview",
          "id": "spotifySidebarView",
          "name": "Spotify",
          "icon": "media/spotify.png"
        },
        {
          "id": "spotifyQueueInfoView",
          "name": "Next Queue Info",
          "icon": "media/spotify.png",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Spotify",
      "properties": {
        "spotify.clientId": {
          "type": "string",
          "default": "d6fa3dc0fe434830a1ae1f005c915f30",
          "description": "Spotify Application Client ID"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "node esbuild.js && cp -r src/views dist/views"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
